@model OfficeLocationMicroservice.WebUi.Models.OfficeModel

@{
    ViewBag.Title = "Index";
}

<head>
    <link href="~/Content/SharedOfficelocationStyles.css" rel="stylesheet" />
    <style>
        .card:hover {
            box-shadow: 0 8px 10px 0 #000000, 0 8px 20px 0 #000000;
            box-shadow: 0 8px 10px 0 rgba(0, 0, 0, 0.2), 0 8px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .cardContainer {
            z-index: 10;
            width: inherit;
            height: 100%;
            justify-content: center;
            flex-wrap: wrap;
            display: flex;
        }

        .modal {
            overflow-y: hidden ;
        }

/*            .modal-backdrop.in {*/
/*                opacity: 0 !important;*/
/*                z-index: -1050 !important;*/
/*            }*/
    </style>
</head>
@*style="overflow-y:hidden"*@
<body id="body" >
    <div class="myContainer">
        <h2>Office Locations</h2>
        <div class="cardContainer">
            @foreach (var office in Model.Offices)
            {
                <div class="card" data-toggle="modal" data-target="#plain_@office.OfficeId" >
                    <h4>@office.Name</h4>
                    <div class="details">
                        @office.Address <br />
                        @office.Country <br />
                        Switchboard:
                        @office.Switchboard <br />
                        Fax: @office.Fax <br />
                        @office.TimeZone <br />
                        @office.Operating
                    </div>

                </div>
            }

        </div>


        <div id="plainModals">

            @foreach (var office in Model.Offices)
            {

                <div class="modal fade" id="plain_@office.OfficeId" data-backdrop="static" data-keyboard="false">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">@office.Name</h4>
                            </div>

                            <div class="modal-body">

                                
                                
                                <div class="form-group">
                                    <label for="office">Office</label>
                                    @Html.TextBoxFor(m => m.OfficeEdit.Name, new
                                    {
                                        @Value = office.Name,
                                        @placeholder = "Type Office Here",
                                        @class = "form-control-static",
                                        @rows = "1",
                                        @id = "Office",
                                        @style = "min-width: 100%;",
                                        @readonly = true
                                    })
                                </div>

                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    @Html.TextAreaFor(m => m.OfficeEdit.Address, new
                                    {
                                        @Value = office.Address,
                                        @placeholder = "Type Address Here",
                                        @class = "form-control-static",
                                        @rows = "1",
                                        @id = "Address",
                                        @style = "min-width: 100%;",
                                        @readonly = true
                                    })

                                    @Html.DropDownListFor(m => m.OfficeEdit.Country, Model.Countries, null, new { @class = "form-control-static",
                                        @disabled = "disabled" })

                                </div>

                                <div class="form-group">
                                    <label for="switchboard">Switchboard</label>
                                    @Html.TextBoxFor(m => m.OfficeEdit.Switchboard, new
                                    {
                                        @Value = office.Switchboard,
                                        @placeholder = "Type Switchboard Here",
                                        @class = "form-control-static",
                                        @rows = "1",
                                        @id = "switchboard",
                                        @style = "min-width: 100%;",
                                        @readonly = true
                                    })
                                </div>

                                <div class="form-group">
                                    <label for="Fax">Fax</label>
                                    @Html.TextBoxFor(m => m.OfficeEdit.Fax, new
                                    {
                                        @Value = office.Fax,
                                        @placeholder = "Type Fax Here",
                                        @class = "form-control-static",
                                        @rows = "1",
                                        @id = "Fax",
                                        @style = "min-width: 100%;",
                                        @readonly = true
                                    })
                                </div>

                                <div class="form-group">
                                    <label for="timezone">Timezone</label>
                                                                        @*  @Html.DropDownListFor(m => m.OfficeEdit.NewTimeZone, null, null, new { @class = "form-control",
        @disabled = "disabled" })
                                                                        *@
                                </div>

                                <div class="form-group">
                                    <label for="operating">Operating</label>
                                    @Html.DropDownListFor(m => m.OfficeEdit.Operating, Model.OperatingOptions, null, new { @class = "form-control-static",
                                   @disabled = "disabled"
                               })

                                </div>


                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" data-toggle="modal" 
                                        data-dismiss="modal" data-target="#modal_@office.OfficeId" >Edit</button>
                            </div>
                            



                        </div>
                    </div>
                </div>

            }
        </div>



        <div id="modals">

            @foreach (var office in Model.Offices)
            {

                <div class="modal fade" id="modal_@office.OfficeId" data-backdrop="static" data-keyboard="false"
                     style="overflow-y: hidden;">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            @using (Html.BeginForm("Save", "OfficeLocation", FormMethod.Post))
                            {
                                @Html.HiddenFor(m => m.OfficeEdit.OfficeId, new { value = @office.OfficeId });

                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" onclick="enablebody();">&times;</button>
                                    <h4 class="modal-title">Edit</h4>
                                </div>

                                <div class="modal-body">

                                    <div class="form-group">
                                        <label for="office">Office</label>
                                        @Html.TextBoxFor(m => m.OfficeEdit.Name, new
                               {
                                   @Value = office.Name,
                                   @placeholder = "Type Office Here",
                                   @class = "form-control",
                                   @rows = "1",
                                   @id = "Office",
                                   @style = "min-width: 100%;"
                               })
                                    </div>

                                    <div class="form-group">
                                        <label for="Address">Address</label>
                                        @Html.TextAreaFor(m => m.OfficeEdit.Address, new
                               {
                                   @Value = office.Address,
                                   @placeholder = "Type Address Here",
                                   @class = "form-control",
                                   @rows = "1",
                                   @id = "Address",
                                   @style = "min-width: 100%;"
                               })

                                        @Html.DropDownListFor(m => m.OfficeEdit.Country, Model.Countries, null, new { @class = "form-control" })

                                    </div>

                                    <div class="form-group">
                                        <label for="switchboard">Switchboard</label>
                                        @Html.TextBoxFor(m => m.OfficeEdit.Switchboard, new
                               {
                                   @Value = office.Switchboard,
                                   @placeholder = "Type Switchboard Here",
                                   @class = "form-control",
                                   @rows = "1",
                                   @id = "switchboard",
                                   @style = "min-width: 100%;"
                               })
                                    </div>

                                    <div class="form-group">
                                        <label for="Fax">Fax</label>
                                        @Html.TextBoxFor(m => m.OfficeEdit.Fax, new
                               {
                                   @Value = office.Fax,
                                   @placeholder = "Type Fax Here",
                                   @class = "form-control",
                                   @rows = "1",
                                   @id = "Fax",
                                   @style = "min-width: 100%;"
                               })
                                    </div>

                                    <div class="form-group">
                                        <label for="timezone">Timezone</label>
                                        @*  @Html.DropDownListFor(m => m.OfficeEdit.NewTimeZone, null, null, new { @class = "form-control" })
                                        *@
                                    </div>

                                    <div class="form-group">
                                        <label for="operating">Operating</label>
                                        @Html.DropDownListFor(m => m.OfficeEdit.Operating, Model.OperatingOptions, null, new { @class = "form-control" })

                                    </div>


                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal" onclick="enablebody();">Close</button>
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                </div>

                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>



    <script language="JavaScript" type="text/javascript" src="/Scripts/jquery-1.10.2.js"></script>
    <script language="JavaScript" type="text/javascript" src="/Scripts/jquery-1.10.2.min.js"></script>

<script>


</script>

    

</body>